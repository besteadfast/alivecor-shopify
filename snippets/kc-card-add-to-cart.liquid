{% style %}
    #app input[type="radio"]{
        display:inline-grid;
        place-content:center;
        width: 1rem;
        height: 1rem;
        border: 2px solid var(--primary-300);
        border-radius: 50%;
        transform: translateY(-2px);
        color:white;
    }

    #app input[type="radio"]:focus{
      box-shadow:none;
    }

    input[type="radio"]::before {
        content: "";
        width: .5rem;
        height: .5rem;
        border-radius: 50%;
        transform: scale(0);
        transition: 120ms transform ease-in-out;
        box-shadow: inset 1em 1em var(--primary-700);
    }


    input[type="radio"] + span{
        opacity:.5;
        transition: 120ms opacity ease-in-out;
    }

    input[type="radio"]:checked::before {
        transform: scale(1);
    }

    input[type="radio"]:checked + span{
        color: var(--primary-700);
        opacity:1;
    }
{% endstyle %}

<div class="form">
  <form action="/cart/add" method="post" enctype="multipart/form-data" id="kardiaCareBundleAddToCartForm" class="AddToCartForm form-vertical" data-productid="{{product.id}}" onsubmit="addToCartKardiaCareDeviceBundle(event, this, '{{product.handle}}', '{{pageName}}')">
    {% capture year_title %}
        1-Year Plan
      {% endcapture %}
      {% capture two_year_title %}
        2-Year Plan
      {% endcapture %}
      {% assign year_price = "$99/year" %}
      {% assign two_year_price = "$179/2 years" %}
      {% case shop.domain %}
        {% when 'dev-alivecor-us.myshopify.com' %}
          {% assign year_id = 32992175226983 %}
          {% assign year_frequency = "12" %}
          {% assign year_price_number = "99" %}
          {% assign year_price_disclaimer = "$99 after your first year" %}
          {% capture year_label %}
          1-Year Plan ($99/year)
          {% endcapture %}
          {% assign kardiamobilecard_id = "39379428868199 " %}
        {% assign bundle_sale_amount = "0" %}
        {% when 'store.kardia.com' %}
          {% assign year_id = 32194082472001 %}
          {% assign year_frequency = "12" %}
          {% assign year_price_number = "99" %}
          {% assign year_price_disclaimer = "$99 after your first year" %}
          {% capture year_label %}
          1-Year Plan ($99/yr)
          {% endcapture %}
          {% assign kardiamobile_id = "20036084615" %}
          {% assign kardiamobile6l_id = "28007532101697" %}
          {% assign kardiamobilecard_id = "" %}          
        {% assign bundle_sale_amount = "30" %}
        {% else %}
      {% endcase %}
    <div class="form visually-hidden">
      <fieldset>
        <div class="form-radio">
          <label for="{{ year_id }}" class="faux-p">
            <input
              id="{{ year_id }}"
              name="kardiaCareMembershipLength"
              type="radio"
              data-frequency="{{ year_frequency }}"
              data-price="{{ year_price }}"
              data-price-number="{{ year_price_number }}"
              data-price-disclaimer="{{ year_price_disclaimer }}"
              data-sale-amount="{{ bundle_sale_amount }}"
              data-show-sale="true"
              data-device-price="0"
              data-price-display-id="kc-card-price"
              class="radio appearance-none"
              value="{{ year_id }}"
              tabindex="1"
              onchange=""
              required
              autocomplete="off"
             />
             <span>{{ year_label }}</span>
          </label>
        </div>
        <div class="form-radio">
          <label for="non_mem" class="faux-p">
            <input
              id="non_mem"
              name="kardiaCareMembershipLength"
              type="radio"
              data-frequency="none"
              data-price-number="0"
              data-device-price="{{ kardiacard_price }}"
              data-price-display-id="kc-card-price"
              class="radio appearance-none"
              value="no_mem"
              tabindex="2"
              onchange=""
              required
              checked="checked"
              autocomplete="off"
             />
            <span>No membership</span>
        </label>
      </fieldset>
    </div>
    <div class="flex-items-bundle">
      <div class="lg:flex justify-between">
        <button
          type="submit"
          name="add"
          id="{{product.id}}AddToCart1"
          class="btn addToCart"
          {% if sold_out %}
            disabled
          {% endif %}
        >
          <span id="AddToCartText">
          {% if sold_out %}
          {{ 'products.product.sold_out' | t }}
          {% elsif preorder %}
          {{ 'products.product.preorder' | t }}
          {% else %}
          {{ 'products.product.add_to_cart' | t }}
          {% endif %}
          </span>
        </button>
        {% if page_title != "Personal EKG Devices by AliveCor" %}
          <div class="inline-block text-right mt-s5 mb-0 flex items-center lg:justify-end" data-bv-show="inline_rating" data-bv-seo="false" data-bv-product-Id="{{product.id}}" data-bv-redirect-url="{{ product.url }}/#reviews"></div>
        {% endif %}
      </div>
    </div>
    <div style="clear: both;"></div>
  </form>
</div>