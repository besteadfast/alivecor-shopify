</div>


<script>
    function scrollToReviews() {
        let accordionItem = document.querySelector('.reviews-button');
        if (accordionItem) {
            accordionItem.click();
            accordionItem.scrollIntoView();
        }
    }

    function initKcUpsell(event) {
        var event = event || window.event;
        event.preventDefault();
        if (event.submitter && event.submitter.classList.contains('reviews')) return
        window.modalProduct = 28007532101697;
        kcOpen()
    }

    document.getElementById('kardiaMobile6LAddToCartForm').addEventListener('submit', initKcUpsell)
</script>
