<article class="faq px-s8 lg:px-s11 py-s13 lg:py-s14">
    <div class="mx-auto text-center" style = "max-width:1040px;">
        <div style="padding:56.25% 0 0 0;position:relative;">
            <iframe src="https://player.vimeo.com/video/{{ section.settings.video_id }}?h=5c8ac4db03&amp;badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;" title="How to record an EKG with KardiaMobile Card"></iframe>
        </div>
        <script src="https://player.vimeo.com/api/player.js"></script>
        <h2 class="mt-s8">{{ section.settings.title }}</h2>
        <p class="mt-s6">{{ section.settings.subtitle }}</p>
    </div>
</article>

{% schema %}
{
  "name": "t:sections.how-to-video-section.name",
  "tag": "section",
  "class": "section how-to-video-section",
  "settings": [
    {
        "type": "number",
        "id": "video_id",
        "label": "Vimeo Video ID"
    },
    {
        "type": "text",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
    }
  ]
}
{% endschema %}
