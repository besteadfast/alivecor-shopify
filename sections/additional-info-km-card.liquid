{% style %}
    .accordion__content--flex-item{
        width:410px;
        text-align:center;
    }

    .accordion__content p:before, .accordion__content p:after{
        display:none;
    }

    #app accordion__content p + p {
        margin-top:1rem;
    }

    #app .accordion__content-wrapper {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

{% endstyle %}

