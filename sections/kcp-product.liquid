        let tooltip = document.querySelector(tooltipId);
        let allTooltips = document.querySelectorAll('.tooltip')
        allTooltips.forEach((elt) => {
            if(elt.id != button.dataset.tooltip){
                elt.classList.add('hidden')
            }
            else{
                elt.classList.toggle('hidden')
            }
        })

