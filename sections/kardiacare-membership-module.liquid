{%- style -%}
    :root {
        --push-size: calc((100vw - 100%) / 2);
        --neg-push-size: calc(var(--push-size) * -1);
    }

    #app .pushed-half-width{
        width: 50vw;
    }

    .theme--kardiacare > .kcp-options > * {
        margin: 0px!important;
        display: flex;
        height: auto;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
{%- endstyle -%}

